<title>Protected Page</title>
<body>
    <header>
        <h1 class="page-title">Protected Page</h1>
        <form id="searchForm">
            <label for="searchTerm" class='head'>Search:</label>
            <input type="text" name="searchTerm" id="searchTerm" value="{{searchTerm}}">
            <button type="submit" id="search-submit">Search</button>
            {{#with searchTerm}}
            <button id="clearSearchResults"><a href="/dashboard">Back To All Tasks</a></button>
            {{/with}}
        </form>
    </header>
    <main>
        <p>Welcome to the Group Study Portal, <span class="user-name">{{userData.firstName}}</span>.</p>
        <div class="user-info">
            <img src="../public/images/{{userData.emailAddress}}.jpeg" class="user-image"><p>{{userData.firstName}} {{userData.lastName}}</p>
            <p>{{userData.emailAddress}}</p>
            <a href="/logout" class="logout-link">Logout</a>
        </div>
        <div class="course-list">
            <h2 class="section-title">Your Courses:</h2>
            <ol>
                {{#each userData.courses}}
                <li>
                    <a class="course-link" href="courses/{{this}}">{{this}}</a>
                    <form class="search-form" action="search.php" method="get">
                        <input type="search" name="search" placeholder="Search...">
                        <button type="submit">Search</button>
                    </form>
                </li>
                {{/each}}
            </ol>
        </div>
    </main>

